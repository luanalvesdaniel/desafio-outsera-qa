{
  "name": "desafio-outsera-qa",
  "version": "1.0.0",
  "description": "Projeto Automação API/Contrato, E2E e Performance - Desafio Outsera QA",
  "type": "module",
  "scripts": {
    "test": "cucumber-js --config cucumber.cjs --retry 1 --tags \"not @skip\"",
    "start:mock:api": "node src/api/mock-api/server.js",
    "test:mock:api": "cucumber-js tests/api/* --config cucumber.api.cjs --tags \"@type_api and not @skip\"",
    "test:api": "concurrently -k -s first \"npm run start:mock:api\" \"npm run test:mock:api\"",
    "test:api:qa": "cross-env TARGET_ENV=qa npm run test:api",
    "test:api:dev": "cross-env TARGET_ENV=dev npm run test:api",
    "test:api:prd": "cross-env TARGET_ENV=prd npm run test:api",
    "test:e2e": "cucumber-js --config cucumber.e2e.cjs --tags \"@type_e2e and not @skip\"",
    "test:e2e:qa": "cross-env TARGET_ENV=qa npm run test:e2e",
    "test:e2e:dev": "cross-env TARGET_ENV=dev npm run test:e2e",
    "test:e2e:prd": "cross-env TARGET_ENV=prd npm run test:e2e",
    "start:mock:k6": "node tests/performance/mock-api/server.js",
    "test:k6": "k6 run --summary-export=reports/k6-summary.json tests/performance/k6-load-test.js",
    "report:k6": "node tests/performance/generate-k6-report.js",
    "test:performance": "concurrently -k -s first \"npm run start:mock:k6\" \"npm run test:k6 && npm run report:k6\"",
    "test:performance:qa": "cross-env TARGET_ENV=qa npm run test:performance",
    "test:performance:dev": "cross-env TARGET_ENV=dev npm run test:performance",
    "test:performance:prd": "cross-env TARGET_ENV=prd npm run test:performance"
  },
  "dependencies": {
    "@cucumber/cucumber": "10.0.0",
    "@playwright/test": "1.42.0",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "concurrently": "9.2.1",
    "cross-env": "7.0.3",
    "dotenv": "16.0.0",
    "express": "5.2.1",
    "node-fetch": "3.3.2",
    "start-server-and-test": "2.1.3"
  }
}
